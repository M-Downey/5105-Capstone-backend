<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ChatMapper">
  <resultMap id="ChatMap" type="com.example.domain.Chat">
    <id column="id" property="id" />
    <result column="user_id" property="userId" />
    <result column="title" property="title" />
  </resultMap>

  <insert id="insert" parameterType="com.example.domain.Chat" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO chats (user_id, title) VALUES (#{userId}, #{title})
  </insert>

  <select id="findById" parameterType="long" resultMap="ChatMap">
    SELECT id, user_id, title FROM chats WHERE id = #{id}
  </select>

  <select id="listByUser" parameterType="long" resultMap="ChatMap">
    SELECT id, user_id, title FROM chats WHERE user_id = #{userId} ORDER BY id DESC
  </select>
</mapper>







